<?xml version="1.0" encoding="UTF-8"?>
<messages xmlns:if="Wt.WTemplate.conditions">
  
  <message id="template.registration">
    <div class="Wt-form Wt-auth-registration">
      <h2>${tr:Wt.Auth.registration-form-title}</h2>
      <p>${tr:Wt.Auth.registration-form-info}</p>

      ${password-description}

      <div class="Wt-fields">
        ${<if:user-name>}
          <label for="${id:user-name}">${user-name-label}
            ${user-name-info class="Wt-info"}
            ${confirm-is-you class="Wt-info"}
          </label>
          ${user-name}
        ${</if:user-name>}

        ${<if:choose-password>}
          <label for="${id:choose-password}">${tr:Wt.Auth.choose-password}
            ${choose-password-info class="Wt-info"}
          </label>
          ${choose-password}

          <label for="${id:repeat-password}">${tr:Wt.Auth.repeat-password}
            ${repeat-password-info class="Wt-info"}
          </label>
          ${repeat-password}
        ${</if:choose-password>}

        ${<if:email>}
          <label for="${id:email}">${tr:Wt.Auth.email}
            ${email-info class="Wt-info"}
          </label>
          ${email}
        ${</if:email>}
      </div>

      ${<if:oauth>}
        <br clear="both" />
        ${oauth-description}
        <label>${tr:Wt.Auth.oauth}
          <span class="Wt-info">${tr:Wt.Auth.oauth-info}</span>
        </label>
        ${icons}
      ${</if:oauth>}

      <div class="Wt-buttons">
        ${ok-button} ${cancel-button}
      </div>
    </div>
  </message>

  <message id="Wt.Auth.template.login">
    <div class="span8 offset2 Wt-auth-login">
      <legend>${tr:Wt.Auth.login-form-title}</legend>
      <p>${tr:Wt.Auth.login-form-info}</p>

      <div class="form-horizontal" id="login-forms">
        ${<if:passwords>}
          ${block:Wt.Auth.field2 user-name user-name-label}
          ${block:Wt.Auth.field password}
          ${block:Wt.Auth.field remember-me}
        ${</if:passwords>}

        ${<if:oauth>}
          <div class="control-group">
            <div class="controls">
              Or use ${icons}
            </div>
          </div>
        ${</if:oauth>}

        <div class="form-actions">
          <p>${login class="btn btn-primary"}
          ${lost-password class="btn btn-link"} ${sep}
          ${register class="btn btn-link"}</p>
        </div>
      </div>
    </div>
  </message>

  <message id="Wt.Auth.remember-me">Stay logged in</message>

  
</messages>