<?xml version="1.0" encoding="UTF-8"?>
<messages xmlns:if="Wt.WTemplate.conditions">
  
  <message id="Wt.Auth.template.login">
    <div class="col-md-8 col-md-offset-2 Wt-auth-login">
      <!--<legend>${tr:Wt.Auth.login-form-title}</legend>-->
      <p>${tr:Wt.Auth.login-form-info}</p>

      <div class="form-horizontal" id="login-forms">
        ${<if:passwords>}
          ${block:Wt.Auth.field2 user-name user-name-label}
          ${block:Wt.Auth.field password}
          ${block:Wt.Auth.field remember-me}
        ${</if:passwords>}

        ${<if:oauth>}
          <div class="control-group">
            <div class="controls">
              Or use ${icons}
            </div>
          </div>
        ${</if:oauth>}

        <div class="form-actions">
          <p>${login class="btn btn-primary"}
          ${register class="btn btn-default"}
          ${lost-password class="btn btn-default"}</p>
        </div>
      </div>
    </div>
  </message>

  <message id="Wt.Auth.remember-me">Remember</message>

  <message id="Wt.Auth.template.logged-in">
    <div class="Wt-auth-logged-in">
      <b>${user-name}</b> ${logout class="btn-warning"}
    </div>
  </message>

  <message id="template.mainui">
    <div class="row">
      <div class="col-sm-6">${left}</div>
      <div class="col-sm-6">${right}</div>
    </div>
  </message>

  <message id="template.view">
    <form class="form-horizontal">
      <div class="form-group">
        <label class="control-label col-sm-3" for="${id:selectview}">
          Select view:
        </label>
        <div class="col-sm-3">${selectview}</div>
        <label class="control-label col-sm-3" for="${id:projection}">
          Projection:
        </label>
        <div class="col-sm-3">${projection}</div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2 col-sm-offset-2" for="${id:xmin}">
          Min. x:
        </label>
        <div class="col-sm-2">${xmin}</div>
        <label class="control-label col-sm-2" for="${id:xmax}">
          Max. x:
        </label>
        <div class="col-sm-2">${xmax}</div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2 col-sm-offset-2" for="${id:ymin}">
          Min. y:
        </label>
        <div class="col-sm-2">${ymin}</div>
        <label class="control-label col-sm-2" for="${id:ymax}">
          Max. y:
        </label>
        <div class="col-sm-2">${ymax}</div>
      </div>
    </form>
  </message>

</messages>